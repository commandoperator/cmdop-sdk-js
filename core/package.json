{
  "name": "@cmdop/core",
  "version": "2026.2.28",
  "description": "CMDOP SDK Core - Shared types, interfaces, and configuration",
  "author": "CMDOP <dev@cmdop.com>",
  "homepage": "https://cmdop.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/commandoperator/cmdop-sdk-js.git",
    "directory": "core"
  },
  "bugs": {
    "url": "https://github.com/commandoperator/cmdop-sdk-js/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^4.3.4",
    "consola": "^3.4.2",
    "p-retry": "^7.1.1"
  },
  "devDependencies": {
    "@cmdop/eslint-config": "workspace:*",
    "@cmdop/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "cmdop",
    "sdk",
    "core",
    "types"
  ],
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
