    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "discord.js": "^14",
    "grammy": "^1.40.0",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
