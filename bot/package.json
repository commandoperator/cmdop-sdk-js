{
  "name": "@cmdop/bot",
  "version": "2026.2.28",
  "description": "CMDOP multi-channel bot integrations â€” Telegram, Discord, Slack, Teams, and more",
  "author": "CMDOP <dev@cmdop.com>",
  "homepage": "https://cmdop.com/sdk/python/bot",
